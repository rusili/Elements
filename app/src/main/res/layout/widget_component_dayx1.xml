<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="90dp"
              android:layout_height="68dp"
              android:background="#80000000"
              android:orientation="vertical"
              android:paddingBottom="4dp"
              android:paddingLeft="2dp"
              android:paddingRight="2dp"
              android:paddingTop="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/widget_component_day_weekday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            android:gravity="center"
            android:text="TUES"
            android:textColor="@color/sky_blue"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/widget_component_day_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="35"
            android:gravity="center"
            android:text="NOV"
            android:textColor="@color/textMain"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/widget_component_day_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/textMain"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/widget_component_day_temphigh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="65&#xb0;"
                android:textAlignment="center"
                android:textColor="@color/textMain"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/widget_component_day_templow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="45&#xb0;"
                android:textAlignment="center"
                android:textColor="@color/textAlt"
                android:textSize="18sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/widget_component_day_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="60"
            android:tint="@color/textAlt"
            />

    </LinearLayout>

</LinearLayout>