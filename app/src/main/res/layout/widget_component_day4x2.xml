<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="152dp"
              android:background="#80000000"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/widget_component_day_weekday4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="TU"
            android:textSize="18sp"
            android:textColor="@color/light_sky_blue"
            />

        <TextView
            android:id="@+id/widget_component_day_day4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="12"
            android:textSize="20sp"
            android:textColor="@color/textMain"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/widget_component_day_temphigh4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="45"
            android:gravity="top|center_horizontal"
            android:textSize="22sp"
            android:textColor="@color/textMain"
            />
        <ImageView
            android:id="@+id/widget_component_day_icon4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_partly_cloudy"
            android:tint="@color/light_sky_blue"
            />

        <TextView
            android:id="@+id/widget_component_day_templow4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="35"
            android:gravity="bottom|center_horizontal"
            android:textSize="22sp"
            android:textColor="@color/textMain"
            />
    </LinearLayout>

</LinearLayout>