<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="152dp"
              android:background="#80000000"
              android:paddingTop="@dimen/day_vertical_padding"
              android:paddingBottom="@dimen/day_vertical_padding"
              android:paddingLeft="@dimen/day_horizontal_padding"
              android:paddingRight="@dimen/day_horizontal_padding"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/widget_component_day_weekday4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="TU"
            android:gravity="center_vertical"
            android:textSize="@dimen/day_weekday_fontsize"
            android:textColor="@color/textAlt"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/widget_component_day_day4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="12"
            android:textSize="@dimen/day_date_fontsize"
            android:textColor="@color/light_sky_blue"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/widget_component_day_temphigh4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="45"
            android:gravity="top|center_horizontal"
            android:textSize="@dimen/day_highlowtemp_fontsize"
            android:textColor="@color/textMain"
            />
        <ImageView
            android:id="@+id/widget_component_day_icon4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_partly_cloudy"
            android:tint="@color/light_sky_blue"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/widget_component_day_templow4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="35"
            android:gravity="bottom|center_horizontal"
            android:textSize="@dimen/day_highlowtemp_fontsize"
            android:textColor="@color/textMain"
            />
    </LinearLayout>

</LinearLayout>