<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="140dp"
             android:layout_height="152dp"
             android:background="#80000000"
             android:orientation="vertical"
             android:paddingBottom="@dimen/day_vertical_padding"
             android:paddingTop="@dimen/day_vertical_padding"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:paddingLeft="@dimen/day_horizontal_padding"
        android:paddingRight="@dimen/day_horizontal_padding"
        >
        <TextView
            android:id="@+id/widget_component_main_weekday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TUE"
            android:textAllCaps="true"
            android:textColor="@color/textAlt"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/widget_component_main_day"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/light_sky_blue"
            android:textSize="24sp"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >

            <TextView
                android:id="@+id/widget_component_main_hitemp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:gravity="top"
                android:text="65&#xb0;"
                android:textColor="@color/textMain"
                android:textSize="@dimen/day_highlowtemp_fontsize"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/widget_component_main_lowtemp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="45"
                    android:textColor="@color/textMain"
                    android:textSize="@dimen/day_highlowtemp_fontsize"
                    />

                <TextView
                    android:id="@+id/widget_component_main_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end"
                    android:text="Long Island City"
                    android:textColor="@color/textMain"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                />

            <ImageView
                android:id="@+id/widget_component_main_icon"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="66"
                android:layout_marginTop="8dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_partly_cloudy"
                android:tint="@color/light_sky_blue"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/widget_component_main_currenttemp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="75"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="65&#xb0;"
                android:textAlignment="viewEnd"
                android:textColor="@color/textMain"
                android:textSize="52sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>