<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="140dp"
             android:layout_height="152dp"
             android:background="#80000000"
             android:orientation="vertical"
             android:paddingBottom="4dp"
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingTop="8dp"
    >

    <TextView
        android:id="@+id/widget_component_main_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TUE"
        android:textColor="@color/sky_blue"
        android:textSize="22sp"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        >

        <TextView
            android:id="@+id/widget_component_main_day"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/light_sky_blue"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/widget_component_main_month"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/widget_component_main_day"
            android:gravity="center_vertical"
            android:text="APR"
            android:textColor="@color/textMain"
            android:textSize="18sp"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                />

            <ImageView
                android:id="@+id/widget_component_main_icon"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="66"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_partly_cloudy"
                android:tint="@color/light_sky_blue"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/widget_component_main_currenttemp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="75"
                android:gravity="center_vertical"
                android:text="65&#xb0;"
                android:textAlignment="viewEnd"
                android:textColor="@color/textMain"
                android:textSize="52sp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/widget_component_main_hitemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:text="65&#xb0;"
        android:textColor="@color/textMain"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/widget_component_main_lowtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:text="45"
        android:textColor="@color/textMain"
        android:textSize="18sp"
        />
</FrameLayout>