<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/recyclerview_card_height"
                android:padding="@dimen/recyclerview_card_margin_leftright"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/recyclerview_card_margin_leftright"
        android:layout_marginRight="@dimen/recyclerview_card_margin_leftright"
        >

        <ImageButton
            android:id="@+id/recyclerview_color_imagebutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/recyclerview_color_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/recyclerview_card_fontsize"
            android:layout_toLeftOf="@id/recyclerview_color_imagebutton"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>