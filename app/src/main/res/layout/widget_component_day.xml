<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="64dp"
              android:layout_height="110dp"
              android:background="#aaaaaa"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/widget_component_day_weekday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:text="Monday"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/widget_component_day_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:text="18"
            android:textSize="14sp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="66"
        >

        <ImageView
            android:id="@+id/widget_component_day_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/widget_component_day_temphigh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="65"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/widget_component_day_templow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:text="45"
                android:textAlignment="center"
                />

        </LinearLayout>



    </FrameLayout>



</LinearLayout>